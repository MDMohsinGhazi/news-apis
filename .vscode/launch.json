{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/index.ts",
            "restart": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": ["--exec", "ts-node"],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
